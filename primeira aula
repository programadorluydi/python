numero= int(input('Digite um numero inteiro:'))
#Escolha a base de conversao
print("[1]para numero binario")
print("[2]para numero octal")
print("[3]para numero hexadecimal")

escolha= int(input("Sua Opção:"))


# Converte o número de acordo com a escolha do usuário






if escolha == 1:
    print(f"{numero} convertido para binário é igual a {bin(numero)[2:]}")
elif escolha == 2:
    print(f"{numero} convertido para octal é igual a {oct(numero)[2:]}")
elif escolha == 3:
    print(f"{numero} convertido para hexadecimal é igual a {hex(numero)[2:]}")
else:
    print("Opção inválida.")

